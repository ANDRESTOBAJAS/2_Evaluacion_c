#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main(){
    int i,j;
    char matriz[3][3];

    // enciendo el generador de números aleatorios
    srand(time(NULL));

    for(i=0;i<3;i++){
        for(j=0;j<3;j++){
            // genero un número aleatorio entre 0 y 2
            int randomNumber = rand() % 3;
            // ponngo una letra a la matriz según el número aleatorio generado
            switch (randomNumber) {
                case 0:
                    matriz[i][j] = 'A';
                    break;
                case 1:
                    matriz[i][j] = 'B';
                    break;
                case 2:
                    matriz[i][j] = 'C';
                    break;
            }
        }
    }

    // escribo la matriz
    for(i=0;i<3;i++){
        for(j=0;j<3;j++){
            printf("%c ", matriz[i][j]);
        }
        printf("\n");
    }

    return 0;
}
